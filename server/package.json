{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "dev:prod": "cross-env NODE_ENV=production nest start --watch",
    "start": "cross-env NODE_ENV=production npx prisma migrate deploy && npx prisma db seed && cross-env NODE_ENV=production node dist/main.js",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier -w \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit --incremental false",
    "fix": "npm run typecheck && npm run lint && npm run format",
    "prisma": "npx prisma migrate dev --name init & npx prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
