{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "dev:prod": "cross-env NODE_ENV=production nest start --watch",
    "start": "npx prisma migrate deploy && npx prisma db seed && cross-env NODE_ENV=production node dist/src/main.js",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier -w \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit --incremental false",
    "fix": "npm run typecheck && npm run lint && npm run format",
    "prisma": "npx prisma migrate dev --name init && npx prisma generate",
    "postinstall": "npx prisma generate"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.5.0",
    "@graphql-yoga/nestjs": "^3.0.2",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-fastify": "^10.3.0",
    "@paljs/plugins": "^6.0.7",
    "@prisma/client": "^5.7.1",
    "argon2": "^0.31.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "graphql": "^16.8.1",
    "graphql-upload-minimal": "^1.5.5",
    "graphql-yoga": "^5.0.2",
    "nestjs-request-context": "^3.0.0",
    "prisma-graphql-type-decimal": "^3.0.0",
    "psl": "^1.9.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^10.2.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.7.1",
    "prisma-nestjs-graphql": "^20.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
